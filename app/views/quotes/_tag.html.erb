<div class='tag'>
<% fields_for "quote[tag_attributes][]", tag do |tag_form|%>    
  <p>
    <%= tag_form.label :name, 'Tag:' %>
    <%= tag_form.text_field :name, :index => nil %>
    <% if tag.new_record? %>
      <%= link_to_function 'remove', "$(this).up('.tag').remove()" %>
    <% else %>
      <%= link_to_function 'remove', "mark_for_remove(this)" %>
      <%= tag_form.hidden_field :should_remove, :index => nil, :class => 'should_remove' %>
      <%= tag_form.hidden_field :id, :index => nil %>
    <% end %>
  </p>
<% end -%>
</div>